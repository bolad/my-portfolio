<div class="col-md-4" >
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
    <% if portfolio_item.photo.attached? %>
      <%= image_tag portfolio_item.photo.variant(resize: '350x200!').processed %>
    <% end %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
      </p>
    </div>
  </div>
</div>
