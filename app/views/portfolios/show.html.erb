<div class="container">
  <div class="row">
    <div class="col-md-7">
      <% if @portfolio_item.photo.attached? %>
        <%= image_tag @portfolio_item.photo.variant(resize: '600x400!').processed %>
        <% end %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <hr>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio_item.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>
